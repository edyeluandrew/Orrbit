# Orbit Backend Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orbit_dev
DATABASE_SSL=false

# Stellar Network
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_PASSPHRASE=Test SDF Network ; September 2015

# Platform Wallet (receives fees)
PLATFORM_WALLET_PUBLIC=GCGE6Y5CTKBRWGWNHMDM5DYCFXNKQLVNJDXDGA2SXOE5X7VZD4F6HSAP
PLATFORM_FEE_PERCENT=2

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Signature Verification
# Set to 'true' to require wallet signature (recommended for production)
REQUIRE_SIGNATURE=false

# Internal API Key (for cron jobs / renewal worker)
INTERNAL_API_KEY=your-internal-api-key-change-in-production

# Webhook Security (optional)
STELLAR_WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Optional: Email (for notifications)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=465
# SMTP_USER=resend
# SMTP_PASS=your-resend-api-key
# EMAIL_FROM=noreply@orbit.app
